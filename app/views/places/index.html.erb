<h1>Beer places search</h1>
<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>
<% if @places %><br/>
  <table>
    <thead>
    	
      <% Place.rendered_fields.each do |f| %>
        <td><%= f %></td>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <% Place.rendered_fields.each do |f| %>
        <%if f==:name%>
        <% id = place.send(:id)%>
          <td><%= link_to place.send(f), places_path + "/#{id}" %></td>
        <%else%>
        <td><%= place.send(f) %></td>
        <%end%>
          
        <% end %>
      </tr>
    <% end %>
  </table>

<strong>Total found in <%= params[:city].capitalize %>: <%= @places.count %></strong>
<% end %>